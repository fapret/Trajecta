        <java classname="org.eclipse.acceleo.SoaML2JavaWS.GenerateJavaWSfromSoaML" classpathref="org.eclipse.acceleo.SoaML2JavaWS.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="GenerateJavaWSfromSoaML.alljars">
        <java classname="org.eclipse.acceleo.SoaML2JavaWS.GenerateJavaWSfromSoaML" classpathref="org.eclipse.acceleo.SoaML2JavaWS.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
